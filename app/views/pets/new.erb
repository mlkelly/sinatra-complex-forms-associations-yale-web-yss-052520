<h1>Create a New Pet</h1>

<form action="/pets" method="POST">
  <label>Name:</label>
  <input type="text" id='pet_name' name="pet[name]">
<br>
  <h3>Existing Owners</h3>
    <% @owners.each do |o| %>
      <input type="radio" name="pet[owner_id]" id="<%= o.id %>" value="<%= o.id %>"><%= o.name %><br>
    <% end %>

  <h3>New Owner</h3>
  <label>Name: </label>
  <input type="text" name="owner[name]" id="owner_name">
<br>
  <button type="submit">Create Pet</button>
</form>